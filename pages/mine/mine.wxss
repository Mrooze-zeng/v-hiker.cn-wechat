/* pages/mine/mine.wxss */
.section {
    background: #fff;
    height: 100%;
}
input,label {
    display: inline-block;
    font-size: 12pt;
}
label {
    padding: 10px;
    border-bottom: 1px solid #ececec;
}
input {
    margin-left: 10rpx;
}
button {
    margin-top: 20px;
}
#avatar {
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    border-radius: 80rpx;
    margin: 50rpx;
}
.nickName {
    position:absolute;
    line-height:17pt;
    font-size:17pt;
    left:285rpx;
    top:50%;
    margin-top:-8.5pt;
}
.imageBox {
    position: relative;
    width: 100%;
    height: 260rpx;
    border-bottom: 1px solid #ececec;
}
.cover {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(236, 236, 236, 0.5);
}
.warn {
    text-align: center;
    color: #aa0000;
    padding: 20rpx;
    border-bottom: 1px solid #ececec;
}
.false input {
    color: #000;
    font-weight: bold;
}
.false button {
    color: #ececec;
}