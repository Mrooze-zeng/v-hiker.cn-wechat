/* pages/home/home.wxss */
swiper {
    height: 320rpx;
    border-top: 2rpx solid #ececec;
    border-bottom: 2rpx solid #ececec;
    margin-bottom: 4rpx;
}
.head {
    padding:20rpx; 
    border-top: 2rpx solid #ececec;
    border-bottom: 2rpx solid #ececec;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    background: #fff;
    font-size: 17pt;
    color: #000;
}
.lists {
    background: #fff;
    width: 100%;
    height: 100%;
}
.list{
    position: relative;
    height: 200rpx;
    border-bottom: 2rpx solid #ececec;
}
.list-image {
    float: left;
    height: 160rpx;
    width: 240rpx;
    padding: 20rpx;
}
.text-list {
    padding: 20rpx;
}
.list-title {
    font-size: 17pt;
    height: 120rpx;
    /*word-wrap: break-word; 
    word-break: normal; 
    overflow-x: hidden;*/
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.buttom-list {
    position: absolute;    
    left: 280rpx;
    font-size: 14pt;
    height: 40rpx;
    width: 60%;
    display: flex;
    flex: 4;
    flex-direction: column;
}
.list-date {
    display: flex;
    font-size: 12pt;
}
.list-price {
    font-size: 12pt;
    display: flex;
    float: right;
    color: #ef6809;
    position: absolute;
    right: 0;
}
.bottom-text {
    font-size: 12pt;
    text-align: center;
    line-height: 12pt;
    padding: 5pt;
}

